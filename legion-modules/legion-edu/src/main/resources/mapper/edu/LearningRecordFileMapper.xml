<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.esmooc.legion.edu.mapper.LearningRecordFileMapper">
    <resultMap type="com.esmooc.legion.edu.entity.LearningRecordFile" id="BizLearningRecordFileResult">
        <result property="courseId" column="course_id"/>
        <result property="userId" column="user_id"/>
        <result property="fileId" column="file_id"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="time" column="time"/>
    </resultMap>

    <sql id="selectBizLearningRecordFileVo">
        select course_id, user_id, file_id, start_time, end_time, time
        from edu_learning_record_file
    </sql>

    <select id="selectBizLearningRecordFileList" parameterType="com.esmooc.legion.edu.entity.LearningRecordFile"
            resultMap="BizLearningRecordFileResult">
        <include refid="selectBizLearningRecordFileVo"/>
        <where>
            <if test="startTime != null">
                and start_time = #{startTime}
            </if>
            <if test="endTime != null">
                and end_time = #{endTime}
            </if>
            <if test="time != null">
                and time = #{time}
            </if>
        </where>
    </select>

    <select id="selectBizLearningRecordFileById" parameterType="com.esmooc.legion.edu.entity.LearningRecordFile"
            resultMap="BizLearningRecordFileResult">
        <include refid="selectBizLearningRecordFileVo"/>
        where course_id = #{courseId} and user_id = #{userId} and file_id = #{fileId}
    </select>

    <select id="selectBizLearningRecordFileSize" parameterType="com.esmooc.legion.edu.entity.LearningRecordFile"
            resultType="integer">
        select COUNT(course_id) from edu_learning_record_file
        where course_id = #{courseId} and user_id = #{userId} and !isNull(end_time)
    </select>

    <select id="selectBizLearningRecordFileTime" resultType="java.lang.Long">
        select
        IF
        ( `time` , `time` , 0 ) AS `time`
        from edu_learning_record_file
        where course_id = #{courseId} and user_id = #{userId} limit 1
    </select>

    <insert id="insertBizLearningRecordFile" parameterType="com.esmooc.legion.edu.entity.LearningRecordFile">
        insert into edu_learning_record_file
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="courseId != null">
                course_id,
            </if>
            <if test="userId != null">
                user_id,
            </if>
            <if test="fileId != null">
                file_id,
            </if>
            <if test="startTime != null">
                start_time,
            </if>
            <if test="endTime != null">
                end_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="courseId != null">
                #{courseId},
            </if>
            <if test="userId != null">
                #{userId},
            </if>
            <if test="fileId != null">
                #{fileId},
            </if>
            <if test="startTime != null">
                #{startTime},
            </if>
            <if test="endTime != null">
                #{endTime},
            </if>
        </trim>
    </insert>

    <update id="updateBizLearningRecordFile" parameterType="com.esmooc.legion.edu.entity.LearningRecordFile">
        update edu_learning_record_file
        <trim prefix="SET" suffixOverrides=",">
            <if test="startTime != null">
                start_time = #{startTime},
            </if>
            <if test="endTime != null">
                end_time = #{endTime},
            </if>
        </trim>
        where course_id = #{courseId} and user_id = #{userId} and file_id = #{fileId}
    </update>

    <update id="updateBizLearningRecordFileTime" parameterType="com.esmooc.legion.edu.entity.LearningRecordFile">
        update edu_learning_record_file set time = #{time}
        where course_id = #{courseId} and user_id = #{userId}
    </update>

    <delete id="deleteBizLearningRecordFileById" parameterType="String">
        delete from edu_learning_record_file where course_id = #{courseId} and user_id = #{userId}
    </delete>

    <delete id="deleteBizLearningRecordFileByIds" parameterType="String">
        delete from edu_learning_record_file where course_id in
        <foreach item="courseId" collection="array" open="(" separator="," close=")">
            #{courseId}
        </foreach>
        and user_id = #{userId}
    </delete>

    <select id="selectVideoStudentRanking" resultType="com.esmooc.legion.edu.entity.vo.RankingVO">

    </select>

</mapper>
